@model BibliotekGruppProjekt.Models.Library.LibraryIndexModel;

<div id="books">
    <h3>All Books</h3>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <a asp-action="Available" class="btn btn-primary">Tillgängliga</a>

    <div id="booksTable" >
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Details</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                <tr class="bookrow">
                    @*<td class="loanrow">
                            <a asp-controller="Loan" asp-action=">Index" asp-route-id="@loan.ID">

                            </a>
                        </td>*@
                    <td><a asp-controller="Library" asp-action="Detail" asp-route-id="@book.Id">(Details)</a></td>
                    <td class="">@book.Title</td>
                    <td class="">@book.Author.Name</td>
                    <td class="">@book.Description</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


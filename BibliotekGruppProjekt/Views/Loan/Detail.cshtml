@model BibliotekGruppProjekt.Models.Loan.LoanDetailModel;

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted">Loan Information</h2>
    </div>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h2>@Model.MemberName</h2>
                    <p>Member ID = @Model.MemberId</p>
                    <table>
                        <tr>Book on Loan: @Model.BookTitle</tr>
                        <br />
                        <tr>Loaned since: @Model.Checkout</tr>
                    </table>
                    @if (Model.Returned == null)
                    {
                        <a class="btn btn-danger" asp-controller="Loan" asp-action="Return" asp-route-id="@Model.ID">Return Loan</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model BibliotekGruppProjekt.Models.Member.MemberIndexModel
@{
    ViewBag.Title = "Member index";
}

<h3>@ViewBag.Title</h3>
<div id="memberIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="patronIndexTable">
        <thead>
            <tr>
                <th>Profile Link</th>
                <th>Name</th>
                <th>PersonNr</th>
                <th>Overdue Fees</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var member in Model.Members)
            {
                <tr>
                    <td><a asp-controller="Member" asp-action="Detail" asp-route-id="@member.ID">(Profile)</a></td>
                    <td>@member.Name</td>
                    <td>@member.PersonNr</td>
                    @*<td>@member.OverdueFees</td>*@
                </tr>
            }
        </tbody>
    </table>
</div>